-\arg\left(1\right)=0\text{°} & \text{per }\omega/\omega_{n}\ll1\\
-\arg\left(2j\left(\pm\xi\right)\right)=\mp90° & \text{per }\omega/\omega_{n}=1\\
-\arg\left(-\left(\omega/\omega_{n}\right)^{2}\pm2j\xi\omega/\omega_{n}\right)=\mp180° & \text{per \omega/\omega_{n}\ensuremath{\gg1}}
\end{cases},\,\text{per }\xi\gtrless0
\]

\end_inset


\begin_inset Formula 
\[
\arg\left[G_{z}\left(j\omega\right)\right]\simeq\begin{cases}
\arg\left(1\right)=0\text{°} & \text{per }\omega/\alpha_{n}\ll1\\
\arg\left(2j\left(\pm\zeta\right)\right)=\pm90° & \text{per }\omega/\alpha_{n}=1\\
\arg\left(-\left(\omega/\alpha_{n}\right)^{2}\pm2\zeta\omega/\omega_{n}\right)=\pm180° & \text{per \omega/\alpha_{n}\ensuremath{\gg1}}
\end{cases},\,\text{per }\zeta\gtrless0
\]

\end_inset


\end_layout

