[0.7cm]
\end_layout

\end_inset


\begin_inset Formula 
\begin{equation}
\mathscr{L}^{-1}\left[F\left(s\right)\right]=f\left(t\right)=\dfrac{1}{2\pi j}\somme{\sigma-j\infty}{\sigma+j\infty}{F\left(s\right)e^{st}}s\label{eq:Antitrasformata-Laplace}
\end{equation}

\end_inset

dove agli estremi di integrazione si ha 
\begin_inset Formula $\sigma>\overline{\sigma},\,\sigma\in\mathbb{R}$
\end_inset

 qualsiasi.
 La corrispondenza tra trasformata e antitrasformata di Laplace è biunivoca
 nel caso di funzioni nulle per 
\begin_inset Formula $t<0$
\end_inset

.
\end_layout

\begin_layout Section
Proprietà
\begin_inset CommandInset label
LatexCommand label
name "sec:Proprietà-della-trasformata"

\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(I\right)}\,\text{\textsc{Linearità}}$
\end_inset


\noun on
:
\noun default
 Prendiamo due funzioni 
\begin_inset Formula $f\left(t\right)$
\end_inset

 e 
\begin_inset Formula $g\left(t\right)$
\end_inset

, allora 
\begin_inset Formula $\forall\alpha\in\mathbb{C},\,\forall\beta\in\mathbb{C}$
\end_inset

 vale
\begin_inset Formula 
\[
\mathscr{L}\left[\alpha f\left(t\right)+\beta g\left(t\right)\right]=\alpha F\left(s\right)+\beta G\left(s\right)
\]

\end_inset

ovvero la 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:Trasformata-razionale"

\end_inset

 è una operazione lineare.
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(II\right)}\,\text{\textsc{Traslazione nel dominio del Tempo}}$
\end_inset


\noun on
:
\noun default
 Comunque preso un ritardo 
\begin_inset Formula $\tau>0$
\end_inset

, si consideri la funzione traslata 
\begin_inset Formula $f\left(t-\tau\right)$
\end_inset

; la sua trasformata di Laplace vale
\begin_inset Formula 
\[
\mathscr{L}\left[f\left(t-\tau\right)\right]=\somme 0{+\infty}{f\left(t-\tau\right)e^{-st}}t=e^{-s\tau}\somme 0{+\infty}{f\left(t-\tau\right)e^{-st}\cdot e^{s\tau}}t
\]

\end_inset


\begin_inset Formula 
\[
=e^{-s\tau}\somme 0{+\infty}{f\left(t-\tau\right)e^{-s\left(t-\tau\right)}}{\left(t-\tau\right)}=\boxed{e^{-s\tau}F\left(s\right)}
\]

\end_inset

dove abbiamo moltiplicato e diviso per 
\begin_inset Formula $e^{-s\tau}$
\end_inset

 e infine abbiamo aggiustato il differenziale 
\begin_inset Formula $dt$
\end_inset

 considerando anche il ritardo (costante).
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(III\right)}\,\text{\textsc{Traslazione nel dominio di Laplace}}$
\end_inset


\noun on
:
\noun default
 Comunque preso un valore 
\begin_inset Formula $\alpha\in\mathbb{C}$
\end_inset

, la trasformata della funzione 
\begin_inset Formula $e^{\alpha t}f\left(t\right)$
\end_inset

 vale:
\begin_inset Formula 
\[
\mathscr{L}\left[e^{\alpha t}f\left(t\right)\right]=\somme 0{+\infty}{e^{\alpha t}f\left(t\right)e^{-st}}t=\somme 0{+\infty}{f\left(t\right)e^{-t\left(s-\alpha\right)}}t=\boxed{F\left(s-\alpha\right)}.
\]

\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(IV\right)}\,\text{\textsc{Derivazione nel dominio del Tempo}}$
\end_inset


\noun on
:
\noun default
 La trasformata di Laplace della derivata prima di una funzione 
\begin_inset Formula $f\left(t\right)$
\end_inset

 rispetto a 
\begin_inset Formula $t$
\end_inset

, vale:
\begin_inset Formula 
\[
\mathscr{L}\left[\dot{f}\left(t\right)\right]=\somme 0{+\infty}{\dot{f}\left(t\right)e^{-st}}t=sF\left(s\right)-f\left(0\right)
\]

\end_inset

Questo risultato si ottiene a partire dalla seguente uguaglianza sull'integranda
:
\begin_inset Formula 
\[
\dfrac{\partial}{\partial t}\left(f\left(t\right)e^{-st}\right)=\dot{f}\left(t\right)e^{-st}-sf\left(t\right)e^{-st}\implies
\]

\end_inset


\begin_inset Formula 
\[
\dot{f}\left(t\right)e^{-st}=\dfrac{\partial}{\partial t}\left(f\left(t\right)e^{-st}\right)+sf\left(t\right)e^{-st}
\]

\end_inset

da cui otteniamo
\begin_inset Formula 
\[
\somme 0{+\infty}{\left(\dfrac{\partial}{\partial t}\left(f\left(t\right)e^{-st}\right)+sf\left(t\right)e^{-st}\right)}t=\somme 0{+\infty}{\dfrac{\partial}{\partial t}\left(f\left(t\right)e^{-st}\right)}t+s\somme 0{+\infty}{f\left(t\right)e^{-st}}t
\]

\end_inset


\begin_inset Formula 
\[
=\left[f\left(0\right)e^{-st}\right]_{0}^{+\infty}+sF\left(s\right)=\boxed{sF\left(s\right)-f\left(0\right)}
\]

\end_inset

Questa proprietà può essere usata in catena per ottenere la seguente formula,
 valida per qualsiasi derivata multipla:
\begin_inset Formula 
\begin{equation}
\mathscr{L}\left[\dfrac{\partial^{n}}{\partial t}f\left(t\right)\right]=s^{n}F\left(s\right)-\serie{i=1}n{s^{n-i}\left.\dfrac{\partial^{i-1}}{\partial t}f\left(t\right)\right|_{t=0}}\label{eq:Derivazione-multipla-tempo-Laplace}
\end{equation}

\end_inset


\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(V\right)}\,\text{\textsc{Derivazione nel dominio di Laplace}}$
\end_inset


\noun on
:
\noun default
 Supponendo che la trasformata 
\begin_inset Formula $F\left(s\right)$
\end_inset

 sia derivabile per ogni 
\begin_inset Formula $s$
\end_inset

 eccetto un numero finito di valori, vale:
\begin_inset Formula 
\[
\mathscr{L}\left[t\cdot f\left(t\right)\right]=\boxed{-\dfrac{\partial}{\partial s}F\left(s\right)}
\]

\end_inset

Questo risultato si ottiene dalla seguente considerazione:
\begin_inset Formula 
\[
\dfrac{\partial}{\partial s}F\left(s\right)=\dfrac{\partial}{\partial s}\left(\somme 0{+\infty}{f\left(t\right)e^{-st}}t\right)=\somme 0{+\infty}{\dfrac{\partial}{\partial s}\left(f\left(t\right)e^{-st}\right)}t
\]

\end_inset


\begin_inset Formula 
\[
=-t\somme 0{+\infty}{f\left(t\right)e^{-st}}t=-\mathscr{L}\left[t\cdot f\left(t\right)\right]
\]

\end_inset


\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(VI\right)}\,\text{\textsc{Integrazione nel dominio del Tempo}}$
\end_inset


\noun on
:
\noun default
 Con l'intuizione che l'integrazione è l'operazione inversa della derivazione,
 si dimostra che ciò vale anche per le trasformate; presa 
\begin_inset Formula $f\left(t\right)$
\end_inset

 integrabile tra 0 e 
\begin_inset Formula $+\infty$
\end_inset

, vale:
\begin_inset Formula 
\[
\mathscr{L}\left[\somme 0{+\infty}{f\left(t\right)}t\right]=\boxed{\dfrac{1}{s}\cdot F\left(s\right)}
\]

\end_inset

dal fatto che l'operazione di derivazione nel dominio del tempo 
\begin_inset Formula $\left(\mathrm{IV}\right)$
\end_inset

 si effettua moltiplicando per 
\begin_inset Formula $s$
\end_inset

 (a meno della condizione iniziale).
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathrm{\left(VII\right)}\,\text{\textsc{Convoluzione nel dominio del Tempo}}$
\end_inset


\noun on
:
\noun default
 
\begin_inset Marginal
status collapsed

\begin_layout Plain Layout
Questa proprietà è fondamentale nell'analisi in frequenza dei movimenti
 dei sistemi LTI
\end_layout

\end_inset

Prendiamo due segnali 
\begin_inset Formula $f_{1}\left(t\right)$
\end_inset

 e 
\begin_inset Formula $f_{2}\left(t\right)$
\end_inset

 e facciamone il 
\emph on
prodotto di convoluzione
\emph default
 come
\begin_inset Formula 
\begin{equation}
f_{1}\left(t\right)\varhexstar f_{2}\left(t\right)=\somme{-\infty}{+\infty}{f_{1}\left(\tau\right)f_{2}\left(t-\tau\right)}{\tau}=\somme{-\infty}{+\infty}{f_{1}\left(t-\eta\right)f_{2}\left(\eta\right)}{\eta}=f_{2}\left(t\right)\varhexstar f_{1}\left(t\right)\label{eq:Prodotto-di-convoluzione}
\end{equation}

\end_inset

Si dimostra che la trasformata di 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:Prodotto-di-convoluzione"

\end_inset

 vale:
\begin_inset Formula 
\[
\mathscr{L}\left[f_{1}\left(t\right)\varhexstar f_{2}\left(t\right)\right]=\boxed{F_{1}\left(s\right)\cdot F_{2}\left(s\right)}
\]

\end_inset


\begin_inset VSpace bigskip
\end_inset


